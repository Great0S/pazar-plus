# ===========================================
# PAZAR+ VPS DEPLOYMENT CONFIGURATION
# ===========================================
# Copy this file to .env and configure your settings

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=5001
HOST=0.0.0.0
API_VERSION=v1

# Client Configuration (Update with your domain)
CLIENT_URL=https://your-domain.com
CORS_ORIGINS=https://your-domain.com

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Generate secure random strings for these secrets
JWT_SECRET=your_super_secure_jwt_secret_here_change_this
SESSION_SECRET=your_session_secret_here_change_this

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL configuration
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pazar_plus_prod
DB_USER=pazar_user
DB_PASSWORD=your_secure_database_password

# Database connection settings
DB_SSL=false
DB_POOL_MAX=25
DB_POOL_MIN=5
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=30000
DB_POOL_EVICT=10000

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
EMAIL_FROM=noreply@your-domain.com
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your-email-password

# ===========================================
# REDIS CONFIGURATION (Optional)
# ===========================================
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# SECURITY SETTINGS
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CSRF_SECRET=your_csrf_secret_here

# ===========================================
# PERFORMANCE & OPTIMIZATION
# ===========================================
DISABLE_BACKGROUND_JOBS=false
CACHE_TTL=300
LOG_LEVEL=info
MAX_CONCURRENT_TASKS=3
TASK_RETRY_INTERVAL=30000
TIMEOUT_CHECK_INTERVAL=60000

# ===========================================
# PLATFORM INTEGRATIONS
# ===========================================
# Add your marketplace API credentials here

# Trendyol
TRENDYOL_API_KEY=
TRENDYOL_SECRET=
TRENDYOL_SUPPLIER_ID=

# Hepsiburada
HEPSIBURADA_API_KEY=
HEPSIBURADA_SECRET=
HEPSIBURADA_MERCHANT_ID=

# N11
N11_API_KEY=
N11_SECRET=
N11_APP_KEY=

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,xlsx,xls

# ===========================================
# MONITORING & LOGGING
# ===========================================
ENABLE_REQUEST_LOGGING=true
LOG_REQUESTS=true
LOG_ERRORS=true
DEBUG_DB_POOL=false
