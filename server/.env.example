# Environment Configuration Template
# Copy this file to .env and update the values

# Application
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Client Configuration
CLIENT_URL=http://localhost:3000

# Database Configuration
# For development, you can use either SQLite or PostgreSQL
DB_TYPE=sqlite
# DB_TYPE=postgresql

# PostgreSQL Configuration (when DB_TYPE=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pazar_plus
DB_USER=your_username
DB_PASSWORD=your_password
DB_SSL=false

# SQLite Configuration (when DB_TYPE=sqlite)
SQLITE_PATH=../database.sqlite

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=../logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Platform API Keys
TRENDYOL_API_KEY=your_trendyol_api_key
TRENDYOL_API_SECRET=your_trendyol_secret
N11_API_KEY=your_n11_api_key
N11_API_SECRET=your_n11_secret
HEPSIBURADA_API_KEY=your_hepsiburada_api_key
HEPSIBURADA_API_SECRET=your_hepsiburada_secret

# Turkish Compliance
GIB_API_URL=https://efaturatest.gib.gov.tr
GIB_USERNAME=your_gib_username
GIB_PASSWORD=your_gib_password
GIB_TEST_MODE=true

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@pazarplus.com

# Security
BCRYPT_ROUNDS=12
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Feature Flags
ENABLE_COMPLIANCE_MODULE=true
ENABLE_ANALYTICS_MODULE=false
ENABLE_B2B_MARKETPLACE=false