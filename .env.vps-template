# VPS Environment Configuration
# Copy this to your VPS and update with actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pazar_plus
# OR individual DB settings:
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pazar_plus
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_DIALECT=postgres

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-immediately
JWT_EXPIRES_IN=1h

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://your-domain.com,https://your-domain.com

# Session Configuration
SESSION_SECRET=your-session-secret-change-this

# Email Configuration (optional)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_DIR=./uploads

# API Configuration
API_VERSION=v1
API_PREFIX=/api
