# Production Environment for Render Deployment
NODE_ENV=production
PORT=10000
HOST=0.0.0.0

# Disable optional services for minimal deployment
DISABLE_REDIS=true
DISABLE_BACKGROUND_JOBS=true
DISABLE_WEBSOCKETS=false
DISABLE_FILE_LOGGING=true
DISABLE_PERFORMANCE_MONITORING=true

# Database (set DATABASE_URL in Render dashboard)
# DATABASE_URL=your_postgres_url_here

# Logging
LOG_LEVEL=info

# Security (set these in Render dashboard)
# JWT_SECRET=your_jwt_secret_here
# SESSION_SECRET=your_session_secret_here

# Platform APIs (set these in Render dashboard if needed)
# TRENDYOL_API_KEY=
# HEPSIBURADA_API_KEY=
# N11_API_KEY=

# Email service (optional)
# EMAIL_SERVICE_API_KEY=

# Feature flags for production
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true
ENABLE_COMPRESSION=true

# Client URL (update when you deploy frontend)
CLIENT_URL=https://pazarplus-frontend.onrender.com
