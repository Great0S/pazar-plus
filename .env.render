# Production Environment for Render Deployment
NODE_ENV=production
PORT=10000
HOST=0.0.0.0

# Disable optional services for minimal deployment
DISABLE_REDIS=true
DISABLE_BACKGROUND_JOBS=true
DISABLE_WEBSOCKETS=false

# Database (set these in Render dashboard)
# DATABASE_URL=your_postgres_url_here

# Logging
LOG_LEVEL=info
DISABLE_FILE_LOGGING=true

# Security
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Platform APIs (set these in Render dashboard if needed)
# TRENDYOL_API_KEY=
# HEPSIBURADA_API_KEY=
# N11_API_KEY=

# Email service (optional)
# EMAIL_SERVICE_API_KEY=

# Feature flags for production
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true
ENABLE_COMPRESSION=true
