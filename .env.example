# ===========================================
# PAZAR+ ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and update the values

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=5001
API_VERSION=v1
HOST=0.0.0.0

# Client Configuration
CLIENT_URL=http://localhost:3000

# ===========================================
# DATABASE CONFIGURATION (PostgreSQL Only)
# ===========================================
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pazar_plus_prod
DB_USER=pazar_user
DB_PASSWORD=your_secure_database_password

# For cloud deployments (Neon, Heroku, etc.)
# DATABASE_URL=postgresql://username:password@host:port/database?ssl=true

# Database Options
DB_SSL=false
DB_POOL_MAX=250
DB_POOL_MIN=5
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=30000
DB_POOL_EVICT=10000

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT Configuration (REQUIRED - Generate strong secrets)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_REFRESH_SECRET=your-different-refresh-secret-minimum-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-minimum-32-characters-long

# ===========================================
# MARKETPLACE PLATFORM APIS
# ===========================================
# Trendyol Integration
TRENDYOL_API_KEY=your_trendyol_api_key
TRENDYOL_API_SECRET=your_trendyol_api_secret
TRENDYOL_SELLER_ID=your_seller_id

# Hepsiburada Integration  
HEPSIBURADA_USERNAME=your_hepsiburada_username
HEPSIBURADA_PASSWORD=your_hepsiburada_password
HEPSIBURADA_MERCHANT_ID=your_merchant_id

# N11 Integration
N11_API_KEY=your_n11_api_key
N11_API_SECRET=your_n11_api_secret

# ===========================================
# CORS & NETWORKING
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5001
ADDITIONAL_CORS_ORIGINS=https://yarukai.com,https://www.yarukai.com,https://yarukai.com/api

# ===========================================
# LOGGING & MONITORING
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH=../logs

# ===========================================
# RATE LIMITING & PERFORMANCE
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ENABLED=false

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
CSRF_SECRET=pazar-plus-csrf-secret-2024

# ===========================================
# TASK QUEUE SETTINGS
# ===========================================
MAX_CONCURRENT_TASKS=3
TASK_RETRY_INTERVAL=30000
TIMEOUT_CHECK_INTERVAL=60000
DEBUG_DB_POOL=true

# ===========================================
# OPTIONAL SERVICES
# ===========================================
# Redis Configuration (for Bull queues)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration
EMAIL_FROM=noreply@pazarplus.com
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Debug Configuration
DEBUG=pazar:*
ENABLE_SWAGGER=true

# Allow server startup without database (development only)
ALLOW_NO_DB=false

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# Uncomment for production deployment:
# NODE_ENV=production
# DB_SSL=true
# RATE_LIMIT_ENABLED=true
# LOG_LEVEL=error
# ENABLE_SWAGGER=false
